programa ProgramaDeTeste;
inicio
	const Desenvolvedor1 'Breno Cruz';
	const Desenvolvedor2 'Claudio Mota';
	inteiro : iterador, opcao, entrada[5];
	
	iterador <- 0;
	opcao <- 0;
	
	escreva('Olá mundo\n');
	escreva('Qual operacao deseja fazer?\n');
	leia(opcao);
	
	avalie ((opcao*2 -2)/2)
		caso 0:
			iterador <- 1;
			repita
				escreva('i = ');
				escreva(iterador);
				escreva('\n');
				iterador <- iterador + 1;
			ate (iterador >= 20);
		caso 1:
			para iterador de 1 ate 20 faca
				escreva('i = ');
				escreva(iterador);
				escreva('\n');
			fim para;
		
		caso 4:
			leia(entrada[opcao]);
			se (nao(entrada / (1+(opcao*entrada*entrada)) >= 1)) entao
				escreva('se:...\n');
			senao
				escreva('se nao:...\n');
			fim se;
		senao:
			escreva('Opcao invalida!');
			
	fim avalie;

	escreva('\nFim de execução...');
fim.