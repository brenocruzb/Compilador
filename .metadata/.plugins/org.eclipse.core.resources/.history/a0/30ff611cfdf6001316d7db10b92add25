programa ProgramaDeTeste;
inicio
	const Desenvolvedor1 'Breno Cruz';
	const Desenvolvedor2 'Claudio Mota';   // declaração de variáveis
	inteiro : iterador, opcao, entrada[5];
	
	iterador <- 0;     //inicialização
	opcao <- 0;
	
	escreva('Olá mundo\n');
	escreva('Qual operacao deseja fazer?\n');
	leia(opcao);
	
	avalie ((opcao*2 -2)/2)
		caso 0:
			iterador <- 1;
			repita
				escreva('i = ');
				escreva(iterador);
				escreva('\n');
				iterador <- iterador + 1;
			ate (iterador >= 20);
		caso 1:
			para iterador de 1 ate 20 faca
				escreva('i = ');
				escreva(iterador);
				escreva('\n');
			fim para;
		caso 2:
			enquanto (iterador*(3*i-2) <= 50*iterador) faca
				escreva(iterador);
				iterador <- iterador*2;
			fim enquanto;
		caso 3:
			para iterador de 1 passo 2 ate 40 faca
				escreva('i = ');
				escreva(iterador);
				escreva('\n');
			fim para;
		caso 4:
			leia(entrada[opcao]);
			se (nao((entrada[opcao]*opcao)/45 < 10)) entao
				escreva('se:...\n');
			senao
				escreva('se nao:...\n');
			fim se;
		senao:
			escreva('Opcao invalida!');
	fim avalie;

	escreva('\nFim de execução...');
fim.