Helpers
tudo = [0..0xffff];
digito = ['0' .. '9'];
letra = ['a' .. 'z'] | ['A' .. 'Z'];
under = '_';
simbolo = letra | under;

hcomentario = '/''/' [0..0xffff]* (10 | 13) | '/''*' [tudo -['*' + '/']]* '*''/';


Tokens
soma = '+';
subtracao = '-';
multiplicacao = '*';
divisao = '/';

caractere = 'caractere';
real = 'real';
inteiro = 'inteiro';
string = '''tudo''';

pontovirgula = ';';
doispontos = ':';
maiorque = '>';
menorque = '<';
igual = '=';
maiorigual = '>=';
menorigual = '<=';
diferente = '<>';
atribuicao = '<-';

programa = 'programa';
fim = 'fim';
ponto = '.';
var = 'var';
escreva = 'escreva';
leia = 'leia';

se = 'se';
entao = 'entao';
senao = 'senao';
fimse = 'fim se';
aspa = ''';
enquanto = 'enquanto';
fimenquanto = 'fim enquanto';
para = 'para';
ate = 'ate';
faca = 'faca';
fimpara = 'fim para';
passo = 'passo';
avalie = 'avalie';
caso = 'caso';
fimavalie = 'fim avalie';

abrecolchete = '[';
fecharcolchete = ']';

e = 'e';
ou = 'ou';
xor = 'xor';
nao = 'nao';
virgula = ',';
abreparenteses = '(';
fechaparenteses = ')';
numero = digito+;
identificador = simbolo (simbolo|digito)*;

comentario = hcomentario;
quebra = 10 | 13;
espaco = ' '+;
vazio = comentario;

Ignored Tokens
vazio;
